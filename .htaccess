## START HTACCESS
    Options -Indexes

    <IfModule mod_rewrite.c>
    RewriteEngine On

    # Hapus trailing slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # BLOK direktori internal (403)
    RewriteRule ^(app|bootstrap|database|resources|routes|services|vendor|private-uploads)(/.*)?$ - [F,L]

    # Arahkan semua request (kecuali file/direktori fisik) ke index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]

    # Authorization header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
    </IfModule>

    # Lindungi file sensitif
    <FilesMatch "^(\.env|composer\.(json|lock)|.*\.log|.*\.sql)$">
    Order allow,deny
    Deny from all
    </FilesMatch>

    # Security headers (opsional)
    <IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    </IfModule>

    ServerSignature Off
## END HTACCESS
