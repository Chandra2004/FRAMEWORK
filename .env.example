APP_ENV=local
APP_DEBUG=true
APP_NAME=TheFramework

# Web Command Center Security (v5.0.0 Multi-Layer Protection)
ALLOW_WEB_MIGRATION=false
# Comma-separated IP addresses allowed to access /_system/* routes
# Use '*' to allow all (NOT RECOMMENDED for production)
# Example: 127.0.0.1,192.168.1.100,103.123.45.67
SYSTEM_ALLOWED_IPS=127.0.0.1
# Optional Basic Authentication for system routes (Highly Recommended)
SYSTEM_AUTH_USER=
SYSTEM_AUTH_PASS=

BASE_URL=http://localhost:8080

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=the_framework_db
DB_USER=root
DB_PASS=

DB_TIMEZONE=+07:00

# Security Keys
ENCRYPTION_KEY=
APP_KEY=
API_SECRET_KEY=

# ----------------------------------
# EMAIL CONFIGURATION (SMTP)
# ----------------------------------
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME="My App Name"

# ----------------------------------
# MIDTRANS PAYMENT GATEWAY
# ----------------------------------
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false
