{
    "name": "chandra2004/the-framework",
    "description": "Secure MVC Native PHP Framework - Version 4.0",
    "version": "4.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Chandra Tri A",
            "email": "chandratriantomo123@gmail.com",
            "homepage": "https://www.the-framework.ct.ws",
            "role": "Lead Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "TheFramework\\": "app/",
            "TheFramework\\Console\\": "app/Console/",
            "TheFramework\\Console\\Commands\\": "app/Console/Commands/",
            "TheFramework\\Http\\Controllers\\": "app/Http/Controllers/",
            "TheFramework\\Middleware\\": "app/Middleware/",
            "TheFramework\\Models\\": "app/Models/",
            "Database\\Migrations\\": "database/migrations/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "require": {
        "php": "^8.3",
        "vlucas/phpdotenv": "^5.6",
        "fakerphp/faker": "^1.24",
        "illuminate/view": "^12.17",
        "illuminate/events": "^12.17",
        "illuminate/filesystem": "^12.17",
        "respect/validation": "^2.4",
        "monolog/monolog": "^3.9",
        "defuse/php-encryption": "^2.4"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
             "@php vendor/bin/phpunit"
        ],
        "post-autoload-dump": [
            "TheFramework\\App\\Router::cacheRoutes"
        ]
    }
}
