{
  "name": "chandra2004/the-framework",
  "description": "Secure MVC Native PHP Framework - Version 5.0.0 (Major Security & Stability Release)",
  "license": "MIT",
  "authors": [
    {
      "name": "Chandra Tri A",
      "email": "chandratriantomo123@gmail.com",
      "homepage": "https://framework.rf.gd",
      "role": "Lead Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "TheFramework\\": "app/",
      "TheFramework\\Console\\": "app/Console/",
      "TheFramework\\Console\\Commands\\": "app/Console/Commands/",
      "TheFramework\\Http\\Controllers\\": "app/Http/Controllers/",
      "TheFramework\\Middleware\\": "app/Middleware/",
      "TheFramework\\Models\\": "app/Models/",
      "Database\\Seeders\\": "database/seeders/"
    },
    "classmap": [
      "database/migrations/",
      "database/seeders/"
    ]
  },
  "require": {
    "php": "^8.3",
    "defuse/php-encryption": "^2.4",
    "fakerphp/faker": "^1.24",
    "illuminate/events": "^12.17",
    "illuminate/filesystem": "^12.17",
    "illuminate/view": "^12.17",
    "monolog/monolog": "^3.9",
    "respect/validation": "^2.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "roave/security-advisories": "dev-master"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@php vendor/bin/phpunit"
    ],
    "post-autoload-dump": [
      "TheFramework\\App\\Router::cacheRoutes"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    },
    "platform": {
      "php": "8.3"
    }
  }
}
